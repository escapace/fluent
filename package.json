{
  "name": "@escapace/fluent",
  "description": "Fluent DSL helper for TypeScript",
  "version": "0.0.0",
  "author": "escapace <opensource@escapace.com>",
  "browser": "lib/umd/index.js",
  "bugs": "https://github.com/escapace/fluent/issues",
  "dependencies": {
    "@escapace/typelevel": "^0.5.0",
    "lodash": "4.17.15",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/chai": "4.2.9",
    "@types/lodash": "4.14.149",
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.1",
    "@typescript-eslint/eslint-plugin": "2.19.2",
    "@typescript-eslint/parser": "2.19.2",
    "chai": "4.2.0",
    "codecov": "3.6.5",
    "eslint": "6.8.0",
    "eslint-config-escapace": "3.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-standard-with-typescript": "13.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsdoc": "21.0.0",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "semantic-release": "17.0.3",
    "syncpack": "4.5.5",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/escapace/fluent",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "DSL",
    "Fluent",
    "TypeScript"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": [
      "syncpack-format --source",
      "syncpack-set-semver-ranges --dev --source"
    ],
    "{src,test}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "escapace/fluent",
  "scripts": {
    "build": "recce build -e src/index.ts",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "recce test -p tsconfig-test.json --browser 'test/**.spec.ts' --node 'test/**.spec.ts' --reporter lcov --reporter text --coverage-exclude 'test/**/*.ts'",
    "typecheck": "tsc -p tsconfig-test.json --noEmit"
  },
  "sideEffects": false,
  "typings": "lib/types/index.d.ts"
}
