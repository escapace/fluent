{
  "name": "@escapace/fluent",
  "description": "Fluent DSL helper for TypeScript",
  "version": "0.0.0",
  "author": "escapace <opensource@escapace.com>",
  "browser": "lib/umd/index.js",
  "bugs": "https://github.com/escapace/fluent/issues",
  "dependencies": {
    "@escapace/typelevel": "^0.4.0",
    "lodash": "4.17.15",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/chai": "4.1.7",
    "@types/lodash": "4.14.136",
    "@types/mocha": "5.2.7",
    "@types/node": "12.6.8",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "husky": "3.0.1",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "semantic-release": "15.13.18",
    "syncpack": "4.5.4",
    "tslint": "5.18.0",
    "tslint-config-escapace": "1.6.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-microsoft-contrib": "6.2.0",
    "typescript": "3.5.3"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/escapace/fluent",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "DSL",
    "Fluent",
    "TypeScript"
  ],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": [
      "syncpack-format --source",
      "syncpack-set-semver-ranges --dev --source",
      "git add"
    ],
    "{src,examples,perf}/**/*.ts": [
      "tslint --project tsconfig-test.json --fix",
      "prettier --write",
      "git add"
    ],
    "{src,examples,perf}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "escapace/fluent",
  "scripts": {
    "build": "recce build -e src/index.ts",
    "lint": "tslint --project tsconfig-test.json -t codeFrame",
    "test": "recce test -p tsconfig-test.json --browser 'test/**.spec.ts' --node 'test/**.spec.ts' --reporter lcov --reporter text --coverage-exclude 'test/**/*.ts'",
    "typecheck": "tsc -p tsconfig-test.json --noEmit"
  },
  "sideEffects": false,
  "typings": "lib/types/index.d.ts"
}
